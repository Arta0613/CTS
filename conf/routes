#GET     /tools/new                  controllers.Tool.form()
#GET     /tools/:id                  controllers.Tool.show(id: Long)
#DELETE  /tools/:id                  controllers.Tool.delete(id: Long)
#GET     /tools/:id/edit             controllers.Tool.edit(id: Long)
#PUT     /tools/:id                  controllers.Tool.update(id: Long)
#POST    /tools                      controllers.Tool.create()
#POST    /tools/comment              controllers.Tool.comment()


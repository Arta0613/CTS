# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index()
POST    /login                            controllers.Application.login()
POST    /signup                           controllers.Application.signup()
GET     /logout                           controllers.Application.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Users
GET      /user                       controllers.UserPage.index(id: Long)
#GET      /user/addtools              controllers.UserPage.create()
#GET     /index/new                  controllers.UserPage.form()
#GET     /index/:id                  controllers.UserPage.show(id: Long)
#DELETE  /index/:id                  controllers.UserPage.delete(id: Long)
#GET     /index/:id/edit             controllers.UserPage.edit(id: Long)
#PUT     /user/:id                   controllers.UserPage.update(id: Long)

# Tools

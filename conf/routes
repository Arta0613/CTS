# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index()
POST    /login                            controllers.Application.login()
POST    /signup                           controllers.Application.signup()
GET     /logout                           controllers.Application.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# UserPage
GET      /user                       controllers.UserPage.index(id: Long)
#GET      /user/comments/:id         controllers.UserPage.commentList(id:long)
#GET     /index/new                  controllers.UserPage.form()
#GET     /index/:id                  controllers.UserPage.show(id: Long)
#DELETE  /index/:id                  controllers.UserPage.delete(id: Long)
#GET     /index/:id/edit             controllers.UserPage.edit(id: Long)
#PUT     /user/:id                   controllers.UserPage.update(id: Long)
POST     /user/transactions            controllers.UserPage.addTrans()
GET      /user/transactions          controllers.UserPage.returnTool()

# Tools
GET     /tools                      controllers.Tools.index()
#GET     /tools/new                  controllers.Tools.form()
GET     /tools/search               controllers.Tools.search()
GET     /tools/:id                  controllers.Tools.show(id:Long)
#DELETE  /tools/:id                  controllers.Tools.delete(id: Long)
#GET     /tools/:id/edit             controllers.Tools.edit(id: Long)
#PUT     /tools/:id                  controllers.Tools.update(id: Long)
POST    /tools                       controllers.Tools.create()
POST    /tools/comments              controllers.Tools.createComment()
#GET     /tools/:id/comments/:num       controllers.Tools.showComment(id:Long, num:Long)

## Requests
